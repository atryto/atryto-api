    "compilerOptions": {
        "target": "ES2017",
        "module": "commonjs",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowJs": true,
        "rootDir": "src",
        "outDir": "bin",
        "inlineSourceMap": true,
        "skipLibCheck": true
