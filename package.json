{
  "name": "atryto",
  "version": "0.0.1",
  "description": "Atryto 2 Exchange Public API",
  "main": "server.js",
  "scripts": {
    "build": "node node_modules/typescript/bin/tsc",
    "test": " node_modules/.bin/nyc node_modules/.bin/mocha -r ts-node/register src/**/*.test.ts --exit",
    "create-db-and-test": "npm run dev-init-db &&  DB_SCHEMAS=exchange_test npm run test",
    "code-coverage": "node_modules/.bin/nyc report --reporter=text",
    "start": "npm run init-db && node bin/server.js",
    "watch": "node node_modules/typescript/bin/tsc && ./node_modules/concurrently/src/main.js \"node node_modules/typescript/bin/tsc -w --outDir bin\" \"node_modules/pm2/bin/pm2 start bin/server.js --watch --no-daemon\" ",
    "build-docker": "docker build -t atryto-api:latest .",
    "build-compose": "npm run build-docker && docker-compose up",
    "start-docker": "docker run -d --name atryto-api -p 0.0.0.0:3000:3000 atryto-api:latest",
    "stop-docker": "docker stop atryto-api:latest",
    "rm-docker": "docker rm atryto-api",
    "rmi-docker": "docker rmi atryto-api:latest",
    "tag-docker": "TODO",
    "push-docker": "TODO",
    "docker-compose": "sh scripts/run_docker.sh",
    "docs": "node_modules/apidoc/bin/apidoc -i ./src -o ./docs",
    "tslint": "node_modules/tslint/bin/tslint './src/**/**/*.ts'",
    "init-db": "flyway -locations=filesystem:src/database-schemas migrate",
    "dev-init-db": "FLYWAY_URL=jdbc:mysql://127.0.0.1:3306 FLYWAY_USER=root FLYWAY_PASSWORD=root FLYWAY_SCHEMAS=exchange flyway -locations=filesystem:src/database-schemas migrate"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/specs/*.spec.ts"
    ],
    "reporter": [
      "text-summary"
    ],
    "all": true
  },
  "dependencies": {
    "@types/bcrypt": "2.0.0",
    "@types/chai": "4.1.2",
    "@types/jsonwebtoken": "^7.2.8",
    "@types/mocha": "5.0.0",
    "@types/node": "9.4.6",
    "apidoc": "0.17.6",
    "axios": "^0.18.0",
    "bcrypt": "3.0.0",
    "chai": "4.1.2",
    "concurrently": "3.5.1",
    "cors": "^2.8.4",
    "fastify": "1.2.1",
    "fastify-cli": "0.15.1",
    "jsonwebtoken": "^8.3.0",
    "mocha": "5.0.2",
    "mochawesome": "3.0.2",
    "mysql": "2.15.0",
    "nyc": "11.4.1",
    "pino": "4.15.4",
    "pm2": "2.10.1",
    "sinon": "4.4.2",
    "ts-node": "5.0.1",
    "tslint": "5.9.1",
    "typescript": "2.7.2"
  }
}
